.row.main-form
  = simple_form_for [:admin, contact_email], html: { class: "col s12" } do |f|
    .col.s12
      - unless contact_email.errors.empty?
        .form-errors.red.lighten-1
          %ul
            - contact_email.errors.full_messages.each do |msg|
              %li= msg
    = f.input :title, length: "75", icon: "title",
      wrapper_html: { class: "m6 s12" }
    = f.input :email_address, icon: "email", wrapper_html: { class: "m6 s12" }
    = f.input :page_id, collection: Page.pages_tabs.map{ |p| [p.title, p.id] },
      prompt: "Select a Page", wrapper_html: { class: "m6 s12" }
    = f.input :order, icon: "format_list_numbered",
      wrapper_html: { class: "m6 s12" }
    = f.input :active, wrapper_html: { class: "s12" }
    = f.button :submit, class: "right"
