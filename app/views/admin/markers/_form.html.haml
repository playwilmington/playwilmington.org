.row.main-form
  = simple_form_for [:admin, marker], html: { class: "col s12" } do |f|
    .col.s12
      - unless marker.errors.empty?
        .form-errors.red.lighten-1
          %ul
            - marker.errors.full_messages.each do |msg|
              %li= msg
    = f.input :title, icon: "title", wrapper_html: { class: "s12" }
    = f.input :address, icon: "room", wrapper_html: { class: "s12" }
    = f.input :marker_type, collection: %w(Museum Parking Food),
      prompt: "Select a Type", wrapper_html: { class: "m6 s12" }
    = f.input :page_id, collection: Page.pages_tabs.map { |p| [p.title, p.id] },
      prompt: "Select a Page", wrapper_html: { class: "m6 s12" }
    = f.input :body, as: :ckeditor, label: false
    = f.button :submit, class: "right"
