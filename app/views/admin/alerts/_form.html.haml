.row
  = form_for alert, url: action_name == 'edit' ? admin_alert_path : admin_alerts_path, builder: FormBuilder, html: { class: 'col s12' } do |f|
    .row
      - alert.errors.full_messages.each do |msg|
        .col.s12
          .card.red
            .card-content.white-text
              %p= msg
    = f.text_field :title, length: '75', icon: 'title'
    = f.text_field :name, length: '25', icon: 'subtitles', help_text: 'Name can only have lowercase letters and underscores'
    = f.date_field :start_date, class: 'datepicker', value: f.object.start_date ? f.object.start_date.to_formatted_s(:date_picker) : nil
    = f.date_field :end_date, class: 'datepicker', value: f.object.end_date ? f.object.end_date.to_formatted_s(:date_picker) : nil
    = f.check_box :active
    .row
      .col.s12.ckeditor-input
        = f.label :content
        = f.cktext_area :content
    = f.submit nil, class: 'right'
