.row.main-form
  = simple_form_for [:admin, page], html: { class: "col s12" } do |f|
    .col.s12
      - unless page.errors.empty?
        .form-errors.red.lighten-1
          %ul
            - page.errors.full_messages.each do |msg|
              %li= msg
    = f.input :title, length: "25", icon: "title"
    = f.input :name, length: "25", icon: "subtitles",
      hint: "Name can only have lowercase letters and underscores"
    = f.input :page_type, collection: %w(Page Tab), prompt: "Select Page Type"
    = f.input :page_id, collection: Page.available_pages.map{ |p| [p.title, p.id] },
      prompt: "Select a Parent Page", wrapper_html: { class: "page_hiding hide" }
    = f.input :icon, icon: "fingerprint",
      wrapper_html: { class: "page_hiding hide" }
    = f.input :order, icon: "format_list_numbered"
    .col.s12.m3
      = f.input :show_calendar
    .col.s12.m3
      = f.input :show_contact
    .col.s12.m3
      = f.input :hide_title
    .col.s12.m3
      = f.input :active
    .row
      .col.s12.ckeditor-input
        = f.label :content
        = f.cktext_area :content
    = f.button :submit, class: "right"
