.row.main-form
  = simple_form_for [:admin, photo_album], html: { class: "col s12" } do |f|
    .col.s12
      - unless photo_album.errors.empty?
        .form-errors.red.lighten-1
          %ul
            - photo_album.errors.full_messages.each do |msg|
              %li= msg
    = f.input :title, maxlength: "75", icon: "title",
      wrapper_html: { class: "m6 s12" }
    = f.input :page_id, collection: Page.pages_tabs.map{ |p| [p.title, p.id] },
      wrapper_html: { class: "m6 s12" }, prompt: "Please Select a Page"
    = f.input :order, icon: "format_list_numbered",
      wrapper_html: { class: "m6 s12" }
    = f.input :active, wrapper_html: { class: "m6 s12" }
    = f.button :submit, class: "right"
