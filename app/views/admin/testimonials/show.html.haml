- content_for :page_title do
  Testimonial

.row
  .col.s12.offset-m1.m10
    .card-panel.main-view
      .row
        .col.s12.m6.grid
          %span.label Name:
          = @testimonial.name
        .col.s12.m6.grid
          %span.label Status:
          = @testimonial.status
        .col.s12.grid
          %span.label Quote:
          = @testimonial.quote

.fixed-action-btn.click-to-toggle.toolbar
  %a.btn-floating.btn-large.waves-effect.waves-light
    = material_icon.menu
  %ul
    %li.waves-effect.waves-light
      = link_to admin_testimonial_path(@testimonial), class: "red" do
        = material_icon.delete_forever
    %li.waves-effect.waves-light
      = link_to edit_admin_testimonial_path(@testimonial), class: "green" do
        = material_icon.edit
