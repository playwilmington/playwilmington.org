- content_for :page_title do
  New Photo Album

.row
  .col.s12.offset-m1.m10
    .card-panel
      .row.main_form
        = form_for [:admin, @photo_album, @photo],
          html: { multipart: true, class: "col s12" } do |f|
          .col.s12
            - unless @photo.errors.empty?
              .form-errors.red.lighten-1
                %ul
                  - @photo.errors.full_messages.each do |msg|
                    %li= msg
          = f.file_field :image
          = f.submit nil, class: "btn waves-effect waves-light right"
