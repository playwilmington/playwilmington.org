- content_for :page_title do
  Collection

.row
  .col.s12.offset-m1.m10
    .card-panel.main-view
      .row
        .col.s12.m6.grid
          %span.label Title:
          = @collection.title
        .col.s12.m6.grid
          %span.label Page Name:
          = @collection.page_name
        .col.s12.m6.grid
          %span.label Order:
          = @collection.order
        .col.s12.m6.grid
          %span.label Icon:
          = @collection.icon
        .col.s12.m6.grid
          %span.label Link:
          = @collection.link
        .col.s12.m6
          %span.label Is Header:
          %span.icon
            - if @collection.is_header?
              = material_icon.check_box
            - else
              = material_icon.check_box_outline_blank
        .col.s12.m6
          %span.label Active:
          %span.icon
            - if @collection.active?
              = material_icon.check_box
            - else
              = material_icon.check_box_outline_blank

.fixed-action-btn.click-to-toggle.toolbar
  %a.btn-floating.btn-large.waves-effect.waves-light
    = material_icon.menu
  %ul
    %li.waves-effect.waves-light
      = link_to admin_collection_path(@collection), class: "red" do
        = material_icon.delete_forever
    %li.waves-effect.waves-light
      = link_to edit_admin_collection_path(@collection), class: "green" do
        = material_icon.edit
