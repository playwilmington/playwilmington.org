- content_for :header do
  Change Your Password

= form_for(resource, as: resource_name, url: password_path(resource_name),
  html: { method: :put, class: 'login-form row' }) do |f|
  - if devise_error_messages? || alert
    .errors.red
      %span= devise_error_messages!
      %span= alert
  = f.hidden_field :reset_password_token
  = f.password_field :password, autofocus: true, autocomplete: 'off',
    label: 'New Password'
  = f.password_field :password_confirmation, autocomplete: 'off'
  = f.submit 'Change Password', class: 'col s12'
