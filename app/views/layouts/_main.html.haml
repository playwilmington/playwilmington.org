- if notice
  :coffee
    Materialize.toast("#{notice}", 4000)
%header.navbar-fixed
  %nav
    .nav-wrapper
      %a.button-collapse{ href: '#', data: { activates: 'slide-out' } }
        %i.material-icons menu
      = link_to "The Children's Museum of Wilmington", root_path,
        class: 'brand-logo'
      %ul.side-nav.fixed#slide-out
        %li
          .userView.header
            .background.center
              = image_tag 'cmowlogo.gif'
        %li
          .divider
        %li
          = link_to root_path, class: 'waves-effect waves-orange' do
            = icon 'home', 'Home'
        - @pages.each do |page|
          %li
            = link_to "/#{page.name}", class: 'waves-effect waves-orange' do
              = icon page.icon, page.title
        %li
          .divider
        - if current_user
          %li
            %a.subheader Admin Functions
          - if current_user.admin?
            %li
              = link_to admin_root_path, class: 'waves-effect waves-orange' do
                = icon 'tachometer', 'Dashboard'
          %li
            = link_to destroy_user_session_path, method: :delete,
              class: 'waves-effect waves-orange' do
              = icon 'sign-out', 'Log Out'
        - else
          %li
            = link_to new_user_session_path,
              class: 'waves-effect waves-orange' do
              = icon 'sign-in', 'Log In'
%main
  = render 'layouts/alert'
  = yield

%footer.page-footer.grey.darken-2.hide-on-print
  .row
    .col.s12.center
      %h5.white-text The Chrildren's Museum of Wilmington
