      %a{ href: 'http://maps.google.com/maps?saddr=My%20Location&daddr=116%20Orange%20Street,%20Wilmington,%20NC%2028401', target: '_Blank' } 116 Orange Street, Wilmington, NC 28401
    .col.s12.center
      %a{ href: 'mailto:info@playwilmington.org', target: '_Blank' } info@playwilmington.org
    .col.s12.center
      %a{ href: 'tel:9102543534', target: '_Blank' } (910) 254 3534
  .row
    .col.s12.center
      = link_to 'Donate Now', '#', class: 'btn waves-effect waves-light deep-orange darken-2'
  .row
    .col.s12.center
      %a.btn-floating.waves-effect.waves-light{ href: 'https://www.facebook.com/childrensmuseumwilmington', target: '_Blank' }
        = icon 'facebook'
