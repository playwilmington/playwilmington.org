!!!
%html{ lang: "en" }
  %head
    %title= @settings.company_name
    = csrf_meta_tags
    = stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": "reload"
    = javascript_include_tag "application",
      "https://maps.googleapis.com/maps/api/js?key=#{ENV['MAP_API_KEY']}&libraries=places",
      "data-turbolinks-track": "reload"

    %meta{ charset: "utf-8" }/
    %meta{ content: "IE=edge", "http-equiv": "X-UA-Compatible" }/
    %meta{ content: "width=device-width, initial-scale=1", name: "viewport" }/
    %link{ href: "https://fonts.googleapis.com/css?family=Indie+Flower",
      rel: "stylesheet", type: "text/css" }/
    -# Add to homescreen for Chrome on Android
    %meta{ content: "yes", name: "mobile-web-app-capable" }/
    %link{ href: "#{asset_path 'cmowlogo.gif'}", rel: "icon",
      sizes: "192x192" }/
    -# Add to homescreen for Safari on iOS
    %meta{ content: "yes", name: "apple-mobile-web-app-capable" }/
    %meta{ content: "#ff6e40", name: "apple-mobile-web-app-status-bar-style" }/
    %meta{ content: "#{@settings.company_name}",
      name: "apple-mobile-web-app-title" }/
    %link{ href: "#{asset_path 'cmowlogo.gif'}",
      rel: "apple-touch-icon-precomposed" }/
    -# Tile icon for Win8 (144x144 + tile color)
    %meta{ content: "#{asset_path 'cmowlogo.gif'}",
      name: "msapplication-TileImage" }/
    %meta{ content: "#ff6e40", name: "msapplication-TileColor" }/
    -# Add to homescreen for Chrome on Android
    %meta{ content: "yes", name: "mobile-web-app-capable" }/
    %link{ href: "#{asset_path 'cmowlogo.gif'}", rel: "icon",
      sizes: "192x192" }/

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-103569329-1', 'auto');

  %body.blue-grey.lighten-4{ class: controller_name }
    - if admin?
      = render "layouts/admin"
    - elsif docs?
      = render "layouts/docs"
    - elsif viewable?
      = render "layouts/login"
    - else
      = render "layouts/main"
